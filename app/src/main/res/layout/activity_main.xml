<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F4E8E8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:src="@drawable/ff"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-10dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textView"
            android:layout_width="278dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:text="About Us :"
            android:textColor="#6A2A2A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="372dp"
            android:layout_height="165dp"
            android:layout_marginLeft="10dp"
            android:text="
         The Palestinian Heritage Museum is located in Nablus,in the Old City,and is distinguished by its various sections that display everything related to the ancien heritage of Palestine ."
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="522dp"
        android:layout_height="261dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="209dp">


        <Button
            android:id="@+id/dis"
            android:layout_width="210dp"
            android:layout_height="64dp"
            android:backgroundTint="#D1CCCC"
            android:text="Display Section"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/get_location"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:text="Get location"
            android:textColor="@color/black"
            android:backgroundTint="#D1CCCC"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:text="Contact information"
        android:textColor="#7A4545"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:text="Tel : 02-28459399" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="292dp"
            android:layout_height="43dp"
            android:text="Gamil : heritage_museum55@gmail.com" />
    </LinearLayout>


</LinearLayout>