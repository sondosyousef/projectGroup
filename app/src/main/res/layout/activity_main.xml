<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F4E8E8">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="406dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:src="@drawable/ff"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-10dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="278dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="About Us :"
            android:textColor="#6A2A2A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="
            The museum was established to express the authenticity of the Palestinian heritage and protect the heritage and authenticity from loss and change by the occupiers, as the museum contains many sections in each section that displays part of the original heritage, including clothes, antiques, traditional foods, and historical books inherited from the ancestors."

            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D1CCCC"
            android:text="Display Section"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"

            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:text="Location of Museum:"
            android:textColor="#6A2A2A"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="411dp"

            android:layout_height="69dp"
            android:layout_marginLeft="10dp"
            android:text="
            The museum is located in the old city of Nablus in the Al-Yasmina neighborhood, which carries an ancient character of Palestinian heritage"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="477dp"
            android:layout_height="123dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/get_location"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#D1CCCC"
                android:text="Get location"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="325dp"
                android:layout_height="156dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/tent_hdr2new1small" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:text="Contact information"
        android:textColor="#7A4545"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:text="Tel : 02-28459399" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="292dp"
            android:layout_height="43dp"
            android:text="Gamil : heritage_museum55@gmail.com" />
    </LinearLayout>


</LinearLayout>